<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true" android:state_pressed="false"><shape android:shape="rectangle">
            <solid android:color="?attr/colorDrawerSelected" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="?attr/colorDrawerSelected" />
        </shape></item>
    <item android:state_pressed="false" android:state_selected="false"><shape android:shape="rectangle">
            <solid android:color="?attr/colorDrawerBack" />
        </shape></item>

</selector>