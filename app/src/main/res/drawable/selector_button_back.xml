<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><layer-list>
            <item><shape>
                    <solid android:color="@color/buttonpressed" />
                </shape></item>
            <item><bitmap android:gravity="center" android:src="@drawable/back" android:tileMode="disabled" />
            </item>
        </layer-list></item>
    <item android:state_enabled="true"><layer-list>
            <item><bitmap android:gravity="center" android:src="@drawable/back" android:tileMode="disabled" />
            </item>
        </layer-list></item>

</selector>