<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5.0dip" android:background="@drawable/selector_list">

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="60.0dip"
        android:layout_height="75.0dip"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvActor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivPoster"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/ivPoster"
        android:maxLines="1"
        android:textColor="#ff040404"
        android:textSize="18.0dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/tvCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvActor"
        android:layout_toEndOf="@+id/ivPoster"
        android:maxLines="1"
        android:textColor="#ff343434"
        android:textSize="18.0dip"
        android:typeface="sans" />

</RelativeLayout>